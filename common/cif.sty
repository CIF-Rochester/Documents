% 1em of space between paragraphs
\setlength{\parskip}{1em}

% Reformat the page title
\makeatletter
\renewcommand\@maketitle{%
	{\LARGE\bfseries\@title\par}
	{\normalsize\@date\par}
	\vskip 1em \par
}
\makeatother

% Reformat the abstract section
\renewenvironment{abstract}{%
	\hfill
	\small
	\begin{shaded}
		% Indent lists in the abstract
		\setlist[1]{leftmargin=1em}
}{
		\par
	\end{shaded}
}

% Use hanging indentation on section titles
\titlelabel{\llap{\thetitle\quad}}

% Use hanging indentation for lists
\setlist[1]{leftmargin=0mm}

